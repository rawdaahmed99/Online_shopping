@model userData
<html>
<style>
    body {
        background-color: cornflowerblue;
        background-size: unset;
        background-position: left;
    }
</style>
<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form class="mx-1 mx-md-4" method="post" style="color:red">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Name" type="text" id="name" name="name" class="form-control" placeholder="Your Name" required />
                                            <span asp-validation-for="Name"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Email" type="email" id="email" name="email" class="form-control" placeholder="Your Email" required />
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-phone fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Phone" type="tel" id="phone" name="phone" class="form-control" placeholder="Your Phone" required />
                                            <span asp-validation-for="Phone"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-address-card fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Address" type="text" id="address" name="address" class="form-control" placeholder="Your Address" required />
                                            <span asp-validation-for="Address"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-address-card fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Country" type="text" id="Country" name="Country" class="form-control" placeholder="Your Country" required />
                                            <span asp-validation-for="Country"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-address-card fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="City" type="text" id="City" name="City" class="form-control" placeholder="Your City" required />
                                            <span asp-validation-for="City"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Username" type="text" id="Username" name="UserName" class="form-control" placeholder="Your UserName" required />
                                            <span asp-validation-for="Username"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Password" type="password" id="password" name="password" class="form-control" placeholder="Password" required />
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="ConfirmPassword" type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Repeat Your Password" required />
                                            <span asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <label style="margin-right: 10px;">
                                            Already Have an account?
                                        </label>
                                        <a href="/Home/Login">Back to login</a>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button asp-for="Email" type="submit" class="btn btn-primary btn-lg">Register</button>
                                        <a asp-action="Singup" asp-controller="Home"></a>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://as2.ftcdn.net/v2/jpg/02/21/58/65/1000_F_221586537_FGMvGLyilRM1LxJH43KLS8zpOPOZpRpu.jpg"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</html>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}